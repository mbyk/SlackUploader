<!DOCTYPE html>
<html>
  <head>
    <title>SlackUploader</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header">
      <div class="container">
        <div class="title">
          <%= link_to('SlackUploader', root_path) %>
        </div>
        <div class="header-navigation">
          <ul>
            <% if !logged_in? %>
            <li><%= link_to 'Login', login_path %></li>
            <% else %>
            <li><%= link_to 'Logout', logout_path, method: :delete, data: { confirm: 'ログアウトしてもよいですか？' } %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>
    <div id="main">
      <div class="container">
        <% flash.each do |k, v| %>
          <div class='<%= "alert-#{k}" %>'><%= "#{v}" %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <footer id="footer">
      <div class="container">
        @SlackUploader
      </div>
    </footer>
  </body>
</html>
